<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/BG_White">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by Date"
        android:textColor="@color/Dark_Blue"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:layout_marginBottom="16dp" />

    <!-- Start Date Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date:"
        android:textColor="@color/Dark_Blue"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etStartDate"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/IvoryWhite"
            android:hint="MM/DD/YYYY"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            android:textColor="@color/Dark_Blue"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat" />

        <ImageButton
            android:id="@+id/btnSelectStartDate"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@color/Dark_Blue"
            android:src="@drawable/calendar"
            android:tint="@color/IvoryWhite"
            android:contentDescription="Select start date"
            android:scaleType="centerInside"
            android:padding="10dp" />
    </LinearLayout>

    <!-- End Date Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date:"
        android:textColor="@color/Dark_Blue"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <EditText
            android:id="@+id/etEndDate"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/IvoryWhite"
            android:hint="MM/DD/YYYY"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            android:textColor="@color/Dark_Blue"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat" />

        <ImageButton
            android:id="@+id/btnSelectEndDate"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@color/Dark_Blue"
            android:src="@drawable/calendar"
            android:tint="@color/IvoryWhite"
            android:contentDescription="Select end date"
            android:scaleType="centerInside"
            android:padding="10dp" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnDialogReset"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Reset"
            android:textColor="@color/Dark_Blue"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <Button
            android:id="@+id/btnDialogCancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cancel"
            android:textColor="@color/Dark_Blue"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/btnDialogConfirm"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Confirm"
            android:textColor="@color/IvoryWhite"
            android:background="@color/Dark_Blue"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="false"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
