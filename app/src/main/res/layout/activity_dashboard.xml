<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/Dark_Blue"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="PoS"
            android:textColor="#FFFFFFFF" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="Inventory"
            android:textColor="#F6F3F3" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:contentDescription="profile button"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/profile" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <!-- Period Selector Row -->
        <TextView
            android:id="@+id/tvPeriodLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Period:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/Dark_Blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/revenue_period_options"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/tvPeriodLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPeriodLabel"
            app:layout_constraintBottom_toBottomOf="@+id/tvPeriodLabel" />

        <!-- Total Revenue Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvRevenue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/Dark_Blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPeriodLabel">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvRevenueLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Revenue"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱15,450.00"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvTransactionCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 transactions"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:alpha="0.8"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Product Categories Section -->
        <TextView
            android:id="@+id/tvCategoriesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Selling Categories"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Dark_Blue"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvRevenue" />

        <!-- Category 1: Cooking Essentials -->
        <LinearLayout
            android:id="@+id/llCategory1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCategoriesTitle">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cooking Essentials"
                android:textSize="16sp"
                android:textColor="@color/Dark_Blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱0.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Dark_Blue" />
        </LinearLayout>

        <!-- Category 2: Snacks -->
        <LinearLayout
            android:id="@+id/llCategory2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llCategory1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Snacks"
                android:textSize="16sp"
                android:textColor="@color/Dark_Blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱0.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Dark_Blue" />
        </LinearLayout>

        <!-- Category 3: Drinks -->
        <LinearLayout
            android:id="@+id/llCategory3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llCategory2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Drinks"
                android:textSize="16sp"
                android:textColor="@color/Dark_Blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱0.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Dark_Blue" />
        </LinearLayout>

        <!-- Category 4: Canned Goods -->
        <LinearLayout
            android:id="@+id/llCategory4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llCategory3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Canned Goods"
                android:textSize="16sp"
                android:textColor="@color/Dark_Blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱0.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Dark_Blue" />
        </LinearLayout>

        <!-- Divider Line -->
        <View
            android:id="@+id/dividerLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/Dark_Blue"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llCategory4" />

        <!-- Low Stock Items Section -->
        <TextView
            android:id="@+id/tvLowStockTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low Stock Alert"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerLine" />

        <TextView
            android:id="@+id/tvLowStockSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items with 10 or fewer units remaining"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLowStockTitle" />

        <!-- Low Stock Item 1 -->
        <LinearLayout
            android:id="@+id/llLowStock1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLowStockSubtitle">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLowStockProduct1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/Dark_Blue" />

                <TextView
                    android:id="@+id/tvLowStockCategory1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvLowStockQuantity1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 left"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- Low Stock Item 2 -->
        <LinearLayout
            android:id="@+id/llLowStock2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llLowStock1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLowStockProduct2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/Dark_Blue" />

                <TextView
                    android:id="@+id/tvLowStockCategory2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvLowStockQuantity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 left"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- Low Stock Item 3 -->
        <LinearLayout
            android:id="@+id/llLowStock3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llLowStock2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLowStockProduct3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/Dark_Blue" />

                <TextView
                    android:id="@+id/tvLowStockCategory3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvLowStockQuantity3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 left"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>