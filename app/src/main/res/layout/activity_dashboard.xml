<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/IvoryWhite">

    <!-- TOP HEADER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topHeader"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:background="@color/Dark_Blue"
        android:paddingEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Logo -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_marginVertical="12dp"
            android:adjustViewBounds="true"
            android:contentDescription="Logo"
            android:src="@drawable/topbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- PROFILE -->
        <TextView
            android:id="@+id/tvNavProfile"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:contentDescription="Profile"
            android:drawableEnd="@drawable/profile"
            android:drawableTint="#FDFBFB"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollableContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/topHeader"
        app:layout_constraintBottom_toTopOf="@+id/llTopNavBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- MAIN CONTENT CONTAINER -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Period Selector Row -->
            <TextView
                android:id="@+id/tvPeriodLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Period:"
                android:textColor="@color/Dark_Blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/spinnerRevenuePeriod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:entries="@array/revenue_period_options"
                app:layout_constraintBottom_toBottomOf="@+id/tvPeriodLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvPeriodLabel"
                app:layout_constraintTop_toTopOf="@+id/tvPeriodLabel" />

            <!-- Total Revenue Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvRevenue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/Dark_Blue"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPeriodLabel">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvRevenueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="Total Revenue"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvRevenueAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserrat"
                        android:text="₱15,450.00"
                        android:textColor="@android:color/white"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTransactionCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:alpha="0.8"
                        android:fontFamily="@font/montserrat"
                        android:text="25 transactions"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Product Categories Section -->
            <TextView
                android:id="@+id/tvCategoriesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/montserrat"
                android:text="Top 4 Selling Categories (Kategoridad)"
                android:textColor="@color/Dark_Blue"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvRevenue" />

            <!-- Category 1: Cooking Essentials -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvCategoryTop1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCategoriesTitle">

                <LinearLayout
                    android:id="@+id/llCategoryTop1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvCategoryName1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat"
                        android:text="Cooking Essentials"
                        android:textColor="@color/Dark_Blue"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvCategoryAmount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="₱0.00"
                        android:textColor="@color/Dark_Blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Category 2: Snacks -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvCategoryTop2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvCategoryTop1">

                <LinearLayout
                    android:id="@+id/llCategoryTop2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvCategoryName2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat"
                        android:text="Snacks"
                        android:textColor="@color/Dark_Blue"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvCategoryAmount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="₱0.00"
                        android:textColor="@color/Dark_Blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Category 3: Drinks -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvCategoryTop3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvCategoryTop2">

                <LinearLayout
                    android:id="@+id/llCategoryTop3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvCategoryName3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat"
                        android:text="Drinks"
                        android:textColor="@color/Dark_Blue"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvCategoryAmount3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="₱0.00"
                        android:textColor="@color/Dark_Blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Category 4: Canned Goods -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvCategoryTop4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvCategoryTop3">

                <LinearLayout
                    android:id="@+id/llCategoryTop4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvCategoryName4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat"
                        android:text="Canned Goods"
                        android:textColor="@color/Dark_Blue"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvCategoryAmount4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="₱0.00"
                        android:textColor="@color/Dark_Blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Divider Line -->
            <View
                android:id="@+id/dividerLowStock"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:background="@color/Dark_Blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvCategoryTop4" />

            <!-- Low Stock Items Section -->
            <TextView
                android:id="@+id/tvLowStockTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat"
                android:text="Low Stock Alert (Mababang i-stock)"
                android:textColor="#D32F2F"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dividerLowStock" />

            <TextView
                android:id="@+id/tvLowStockSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat"
                android:text="Items with 5 or fewer units remaining"
                android:textColor="#1A1818"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLowStockTitle" />

            <!-- RecyclerView for Low Stock Items -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLowStock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLowStockSubtitle"
                tools:listitem="@layout/item_low_stock" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BOTTOM NAV BAR -->
    <LinearLayout
        android:id="@+id/llTopNavBar"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@color/Dark_Blue"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Dashboard -->
        <TextView
            android:id="@+id/tvNavDashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1AFFFFFF"
            android:clickable="true"
            android:drawableTop="@drawable/dashboard"
            android:drawableTint="#FFFFFFFF"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Dashboard"
            android:textColor="#FFFFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

        <!-- POS -->
        <TextView
            android:id="@+id/tvNavPos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:drawableTop="@drawable/pos"
            android:drawableTint="#FFFFFFFF"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="PoS"
            android:textColor="#FFFFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

        <!-- INVENTORY -->
        <TextView
            android:id="@+id/tvNavInventory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/inventory"
            android:drawableTint="#F6F3F3"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Inventory"
            android:textColor="#F6F3F3"
            android:textSize="11sp"
            android:textStyle="bold" />

        <!-- ADD PRODUCT -->
        <TextView
            android:id="@+id/btnAddProductPage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/add"
            android:drawableTint="#F6F3F3"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Add Product"
            android:textColor="#F6F3F3"
            android:textSize="11sp"
            android:textStyle="bold" />

        <!-- TRANSACTIONS -->
        <TextView
            android:id="@+id/tvNavHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/history"
            android:drawableTint="#F6F3F3"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Transactions"
            android:textColor="#F6F3F3"
            android:textSize="11sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
