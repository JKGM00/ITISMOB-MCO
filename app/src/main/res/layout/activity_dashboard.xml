<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF">

    <LinearLayout
        android:id="@+id/llTopNavBar"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:background="@color/Dark_Blue"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tvNavPos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="PoS"
            android:textColor="#FFFFFFFF" />

        <TextView
            android:id="@+id/tvNavInventory"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="Inventory"
            android:textColor="#F6F3F3" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvNavProfile"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="Profile"
            android:textColor="#F6F3F3" />

        <TextView
            android:id="@+id/tvNavLogOut"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="Log Out"
            android:textColor="#F6F3F3" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llTopNavBar">

        <!-- Period Selector Row -->
        <TextView
            android:id="@+id/tvPeriodLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Period:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/Dark_Blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinnerRevenuePeriod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/revenue_period_options"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/tvPeriodLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPeriodLabel"
            app:layout_constraintBottom_toBottomOf="@+id/tvPeriodLabel" />

        <!-- Total Revenue Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvRevenue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/Dark_Blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPeriodLabel">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvRevenueLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Revenue"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvRevenueAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱15,450.00"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvTransactionCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 transactions"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:alpha="0.8"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Product Categories Section -->
        <TextView
            android:id="@+id/tvCategoriesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Top 4 Selling Categories"
            android:textColor="@color/Dark_Blue"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvRevenue" />

        <!-- Category 1: Cooking Essentials -->
        <LinearLayout
            android:id="@+id/llCategoryTop1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCategoriesTitle">

            <TextView
                android:id="@+id/tvCategoryName1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cooking Essentials"
                android:textSize="16sp"
                android:textColor="@color/Dark_Blue" />

            <TextView
                android:id="@+id/tvCategoryAmount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱0.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Dark_Blue" />
        </LinearLayout>

        <!-- Category 2: Snacks -->
        <LinearLayout
            android:id="@+id/llCategoryTop2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llCategoryTop1">

            <TextView
                android:id="@+id/tvCategoryName2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Snacks"
                android:textSize="16sp"
                android:textColor="@color/Dark_Blue" />

            <TextView
                android:id="@+id/tvCategoryAmount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱0.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Dark_Blue" />
        </LinearLayout>

        <!-- Category 3: Drinks -->
        <LinearLayout
            android:id="@+id/llCategoryTop3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llCategoryTop2">

            <TextView
                android:id="@+id/tvCategoryName3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Drinks"
                android:textSize="16sp"
                android:textColor="@color/Dark_Blue" />

            <TextView
                android:id="@+id/tvCategoryAmount3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱0.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Dark_Blue" />
        </LinearLayout>

        <!-- Category 4: Canned Goods -->
        <LinearLayout
            android:id="@+id/llCategoryTop4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llCategoryTop3">

            <TextView
                android:id="@+id/tvCategoryName4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Canned Goods"
                android:textSize="16sp"
                android:textColor="@color/Dark_Blue" />

            <TextView
                android:id="@+id/tvCategoryAmount4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱0.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Dark_Blue" />
        </LinearLayout>

        <!-- Divider Line -->
        <View
            android:id="@+id/dividerLowStock"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/Dark_Blue"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llCategoryTop4" />

        <!-- Low Stock Items Section -->
        <TextView
            android:id="@+id/tvLowStockTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low Stock Alert"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerLowStock" />

        <TextView
            android:id="@+id/tvLowStockSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items with 10 or fewer units remaining"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLowStockTitle" />

        <!-- Low Stock Items RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLowStock"
            android:layout_width="361dp"
            android:layout_height="252dp"
            android:layout_marginTop="12dp"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLowStockSubtitle"
            app:layout_constraintVertical_bias="0.0"
            tools:listitem="@layout/item_low_stock" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>