<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/IvoryWhite">

    <!-- TOP HEADER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topHeader"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:background="@color/Dark_Blue"
        android:paddingStart="16dp"
        android:paddingEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Logo -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_marginVertical="12dp"
            android:adjustViewBounds="true"
            android:contentDescription="Logo"
            android:src="@drawable/topbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- PROFILE -->
        <TextView
            android:id="@+id/tvNavProfile"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:contentDescription="Profile"
            android:drawableEnd="@drawable/profile"
            android:drawableTint="#FDFBFB"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Modern Search Section -->
    <LinearLayout
        android:id="@+id/searchSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topHeader">

        <!-- Search Bar Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <EditText
                android:id="@+id/etSearchBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat"
                android:hint="ðŸ”  Search products..."
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:inputType="text"
                android:maxLines="1" />
        </androidx.cardview.widget.CardView>

        <!-- Filter Button Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <ImageView
                android:id="@+id/btnFilter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="#555555"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Filter"
                android:tooltipText="Filter by Category"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Inventory List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvInventory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:scrollbars="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/llTopNavBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchSection" />

    <!-- Empty State -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emptyStateContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:background="@color/IvoryWhite"
        app:layout_constraintBottom_toTopOf="@+id/llTopNavBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchSection">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.35">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="ðŸ“¦"
                android:textSize="80sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:text="No Products Found"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Add your first product to get started"
                android:textColor="#999999"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- BOTTOM NAV BAR -->
    <LinearLayout
        android:id="@+id/llTopNavBar"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@color/Dark_Blue"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Dashboard -->
        <TextView
            android:id="@+id/tvNavDashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/dashboard"
            android:drawableTint="#FFFFFFFF"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Dashboard"
            android:textColor="#FFFFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

        <!-- POS -->
        <TextView
            android:id="@+id/tvNavPos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:drawableTop="@drawable/pos"
            android:drawableTint="#FFFFFFFF"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="PoS"
            android:textColor="#FFFFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

        <!-- INVENTORY -->
        <TextView
            android:id="@+id/tvNavInventory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1AFFFFFF"
            android:clickable="true"
            android:drawableTop="@drawable/inventory"
            android:drawableTint="#F6F3F3"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Inventory"
            android:textColor="#F6F3F3"
            android:textSize="11sp"
            android:textStyle="bold" />

        <!-- ADD PRODUCT -->
        <TextView
            android:id="@+id/btnAddProductPage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/add"
            android:drawableTint="#F6F3F3"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Add Product"
            android:textColor="#F6F3F3"
            android:textSize="11sp"
            android:textStyle="bold" />

        <!-- TRANSACTIONS -->
        <TextView
            android:id="@+id/tvNavHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/history"
            android:drawableTint="#F6F3F3"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Transactions"
            android:textColor="#F6F3F3"
            android:textSize="11sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
