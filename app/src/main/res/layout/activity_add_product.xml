<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/IvoryWhite"
    android:orientation="vertical">

    <!-- Top Menu Bar -->
    <LinearLayout
        android:id="@+id/topMenuBar"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@color/Dark_Blue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvBack2Main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Dark_Blue"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:text="← Back to Main"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:clipToPadding="false">

            <!-- Header -->
            <TextView
                android:id="@+id/tvAddProductLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:drawableStart="@android:drawable/ic_menu_add"
                android:drawablePadding="12dp"
                android:drawableTint="#0D3B66"
                android:fontFamily="@font/montserrat"
                android:text="Add New Product"
                android:textColor="#0D3B66"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!-- Product Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Product Name -->
                    <TextView
                        android:id="@+id/tvProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Product Name"
                        android:textColor="#0D3B66"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/text_border"
                        android:fontFamily="@font/montserrat"
                        android:hint="e.g., Mega Sardinas"
                        android:inputType="textCapWords"
                        android:padding="16dp"
                        android:textColor="#333333"
                        android:textColorHint="#999999"
                        android:textSize="16sp" />

                    <!-- Category -->
                    <TextView
                        android:id="@+id/tvCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Category"
                        android:textColor="#0D3B66"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spnProductCategory"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/text_border"
                        android:paddingStart="8dp"
                        android:popupBackground="#FFFFFF"
                        android:spinnerMode="dropdown" />

                    <!-- Cost & Price Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <!-- Unit Cost -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvUnitCost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/montserrat"
                                android:text="Unit Cost (₱)"
                                android:textColor="#0D3B66"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/etUnitCost"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_border"
                                android:fontFamily="@font/montserrat"
                                android:hint="0.00"
                                android:inputType="numberDecimal"
                                android:padding="16dp"
                                android:textColor="#333333"
                                android:textColorHint="#999999"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <!-- Selling Price -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSellingPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/montserrat"
                                android:text="Selling Price (₱)"
                                android:textColor="#0D3B66"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/etSellingPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_border"
                                android:fontFamily="@font/montserrat"
                                android:hint="0.00"
                                android:inputType="numberDecimal"
                                android:padding="16dp"
                                android:textColor="#333333"
                                android:textColorHint="#999999"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Quantity -->
                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Quantity (in pcs.)"
                        android:textColor="#0D3B66"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etStockQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_border"
                        android:fontFamily="@font/montserrat"
                        android:hint="0"
                        android:inputType="number"
                        android:padding="16dp"
                        android:textColor="#333333"
                        android:textColorHint="#999999"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Barcode Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Barcode"
                        android:textColor="#0D3B66"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnScanBarcode"
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="0.7"
                            android:backgroundTint="#5B6F46"
                            android:fontFamily="@font/montserrat"
                            android:paddingVertical="12dp"
                            android:text="Scan Barcode"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/etBarcodeEntry"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/text_border"
                            android:fontFamily="@font/montserrat"
                            android:hint="Input Code..."
                            android:inputType="number"
                            android:padding="14dp"
                            android:textColor="#333333"
                            android:textColorHint="#999999"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/IvoryWhite"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/Dark_Blue"
            android:fontFamily="@font/montserrat"
            android:paddingVertical="14dp"
            android:singleLine="true"
            android:text="Add Product"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#CCCCCC"
            android:fontFamily="@font/montserrat"
            android:paddingVertical="14dp"
            android:text="Cancel"
            android:textColor="#0D3B66"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
